{
  "system_version": "2.0",
  "features": [
    "real-time_combat",
    "rpg_elements",
    "microchip_communications",
    "intelligence_programming"
  ],
  "builds": {
    "core": {
      "description": "Base survival horror experience",
      "includes": [
        "real-time_combat",
        "microchip_communications",
        "intelligence_programming"
      ],
      "excludes": ["rpg_elements"]
    },
    "rpg": {
      "description": "RPG version with progression systems",
      "includes": [
        "rpg_elements",
        "microchip_communications",
        "intelligence_programming"
      ],
      "excludes": []
    }
  },
  "objects": {
    "player": {
      "base": {
        "stats": {
          "health": 100,
          "stamina": 100,
          "armor": 15,
          "attack_damage": 20,
          "attack_speed": 2.0,
          "movement_speed": 3.5
        },
        "moves": {
          "quick_attack": {
            "damage": 15,
            "stamina_cost": 10,
            "cooldown": 1.5
          },
          "heavy_attack": {
            "damage": 30,
            "stamina_cost": 25,
            "cooldown": 3.0,
            "effects": ["stagger"]
          }
        }
      },
      "rpg": {
        "stats": {
          "strength": 10,
          "agility": 12,
          "intelligence": 8,
          "perception": 10,
          "luck": 7
        },
        "abilities": {
          "dodge_mastery": {
            "unlock_level": 5,
            "effect": "+20% dodge chance"
          },
          "critical_strike": {
            "unlock_level": 8,
            "effect": "+15% critical damage"
          }
        },
        "progression": {
          "xp_gain": "combat_performance",
          "skill_points": 1,
          "level_cap": 50
        }
      },
      "microchip": {
        "rfc_communication": {
          "bandwidth": "2.4GHz",
          "range": 50,
          "encryption": "AES-256"
        }
      }
    },
    "wild_dog": {
      "base": {
        "stats": {
          "health": 60,
          "attack_damage": 12,
          "movement_speed": 4.0
        },
        "ai": {
          "behavior_tree": {
            "root": "attack_sequence",
            "nodes": {
              "patrol": {
                "radius": 10,
                "waypoints": 4
              },
              "chase": {
                "speed_modifier": 1.3,
                "range": 15
              },
              "attack": {
                "sequence": ["bite", "lunge"],
                "cooldown_variation": [0.5, 1.5]
              }
            }
          }
        }
      },
      "rpg": {
        "loot": {
          "common": ["dog_tooth", "raw_meat"],
          "rare": ["dog_claw", "rabies_sample"],
          "epic": ["alpha_dog_fur"]
        }
      }
    }
  },
  "technological_advancements": {
    "microchip_communications": {
      "description": "RFID-based inter-character communication system",
      "implementation": ".rfc files",
      "features": [
        "secure_data_transfer",
        "proximity_triggered_events",
        "environmental_sensors"
      ],
      "example": {
        "file": "chip_comms.rfc",
        "content": {
          "frequency": "915MHz",
          "protocol": "RFID-6C",
          "data_format": "JSON",
          "range": 50
        }
      }
    },
    "intelligence_programming": {
      "description": "AI behavior modification framework",
      "implementation": ".aii files",
      "features": [
        "procedural_adaptation",
        "sandboxed_execution",
        "clean_data_validation"
      ],
      "example": {
        "file": "dog_behavior.aii",
        "content": {
          "aggression": 0.8,
          "fear": 0.3,
          "learning_rate": 0.1,
          "sandbox": {
            "memory_limit": "64MB",
            "execution_time": "100ms"
          }
        }
      }
    }
  },
  "gaming_features": {
    "web5_integration": {
      "description": "Decentralized game asset management",
      "features": [
        "transparent_transactions",
        "dependency_free",
        "procedural_generation",
        "ai_monitoring"
      ],
      "implementation": {
        "virtual_playground": {
          "monitoring": {
            "metrics": [
              "asset_placement",
              "player_interaction",
              "environmental_changes"
            ],
            "validation": {
              "binary_checksum": "SHA-256",
              "sandboxing": "WASM"
            }
          },
          "procedural_generation": {
            "algorithms": [
              "perlin_noise",
              "wave_function_collapse",
              "grammar_based"
            ],
            "constraints": [
              "narrative_coherence",
              "difficulty_curving",
              "asset_variety"
            ]
          }
        }
      }
    }
  },
  "combat_system": {
    "real-time": {
      "frame_rate": 60,
      "deterministic": true,
      "physics": {
        "collision": "hitbox_based",
        "damage_calculation": {
          "base": "attack_damage - armor",
          "modifiers": [
            "critical_chance",
            "elemental_weakness",
            "positional_bonus"
          ]
        }
      },
      "ai_decision_tree": {
        "root": "threat_assessment",
        "branches": [
          {
            "condition": "distance > 5",
            "action": "range_attack"
          },
          {
            "condition": "health < 30%",
            "action": "flee"
          }
        ]
      },
      "environmental_interactions": {
        "objects": {
          "barrel": {
            "explosive": true,
            "trigger": "gunshot"
          },
          "tree": {
            "climbable": true,
            "cover_bonus": 0.3
          }
        },
        "hazards": {
          "fire": {
            "damage": 2,
            "spread": 0.5
          },
          "water": {
            "slow_modifier": 0.7
          }
        }
      }
    },
    "rpg_elements": {
      "progression": {
        "xp_formula": "base_xp * (1 + level_difference * 0.1)",
        "leveling": {
          "health_gain": 5,
          "stamina_gain": 3,
          "ability_points": 1
        }
      },
      "equipment": {
        "slots": ["head", "torch", "weapon", "armor", "amulet"],
        "rarity_tiers": [
          "common",
          "uncommon",
          "rare",
          "epic",
          "legendary"
        ]
      },
      "crafting": {
        "system": "grid_based",
        "stations": ["campfire", "workbench", "alchemy_table"]
      }
    }
  },
  "combat_sequence": {
    "init": {
      "player_position": [0, 0],
      "enemy_position": [5, 0],
      "environment": "forest"
    },
    "turns": [
      {
        "actor": "player",
        "action": "move",
        "target": [3, 0],
        "time": 0.5
      },
      {
        "actor": "wild_dog",
        "action": "bite",
        "target": "player",
        "hit": true,
        "damage": 12,
        "time": 1.0
      },
      {
        "actor": "player",
        "action": "dodge",
        "success": true,
        "time": 1.2
      },
      {
        "actor": "player",
        "action": "quick_attack",
        "target": "wild_dog",
        "hit": true,
        "damage": 15,
        "time": 1.8
      }
    ]
  }
}
